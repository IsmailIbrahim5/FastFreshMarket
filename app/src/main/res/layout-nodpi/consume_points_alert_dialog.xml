<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="30dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/consume"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="24sp"
            android:background="@color/green"
            android:textColor="@android:color/white"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="2"
                android:text="@string/pts100"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:layout_alignParentStart="true"/>

            <Button
                android:id="@+id/button_100"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:text="@string/get"
                android:textColor="@color/green"
                app:strokeColor="@color/light_green"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/text_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pts1000"
                android:lines="2"
                android:textSize="20sp"
                android:textColor="@color/light_green"
                android:gravity="center"
                android:layout_alignParentStart="true"
                />

            <Button
                android:id="@+id/button_1000"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:enabled="false"
                android:text="@string/get"
                android:textColor="@color/light_green"
                app:cornerRadius="20dp"
                app:strokeColor="@color/light_green"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/text_10000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pts10000"
                android:lines="2"
                android:textSize="20sp"
                android:textColor="@color/light_green"
                android:gravity="center"
                android:layout_alignParentStart="true"
                />

            <Button
                android:id="@+id/button_10000"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:enabled="false"
                android:text="@string/get"
                android:textColor="@color/light_green"
                app:cornerRadius="20dp"
                android:layout_alignParentEnd="true"
                app:strokeColor="@color/light_green" />
        </RelativeLayout>


            <Button
                android:id="@+id/skip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button"
                android:text="@string/skip"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp"
                android:layout_margin="16dp"
                />
        <TextView
            android:id="@+id/current_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_green"
            android:text="You Have 120 Points"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:textSize="18sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>